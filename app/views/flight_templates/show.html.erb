<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Flight #<%= @flight.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/flights" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <!-- Edit link flight start -->
      <div class="col">
        <% if current_user == @flight.user %>
          <a href="/flights/<%= @flight.id %>/edit" class="btn btn-block btn-sm btn-outline-secondary">
            Edit flight
          </a>
        <% end %>
      </div>
      <!-- Edit link flight end -->

      <!-- Delete link flight start -->
      <div class="col">
        <% if current_user == @flight.user %>
          <a href="/delete_flight/<%= @flight.id %>" class="btn btn-block btn-sm btn-outline-secondary">
            Delete flight
          </a>
        <% end %>
      </div>
      <!-- Delete link flight end -->
    </div>

    <dl>
      <dt>
        Flight time
      </dt>
      <!-- Display flight_time start -->
      <dd>
        <%= @flight.flight_time %>
      </dd>
      <!-- Display flight_time end -->

      <dt>
        User
      </dt>
      <!-- Display user_id start -->
      <dd>
        <% if @flight.user.present? %>
          <a href="/users/<%= @flight.user_id %>">
            <%= @flight.user.email %>
          </a>
        <% end %>
      </dd>
      <!-- Display user_id end -->

      <dt>
        Departs at
      </dt>
      <!-- Display departs_at start -->
      <dd>
        <%= @flight.departs_at %>
      </dd>
      <!-- Display departs_at end -->

      <dt>
        Description
      </dt>
      <!-- Display description start -->
      <dd>
        <%= @flight.description %>
      </dd>
      <!-- Display description end -->

      <dt>
        Created at
      </dt>
      <!-- Display created_at start -->
      <dd>
        <%= time_ago_in_words(@flight.created_at) %> ago
      </dd>
      <!-- Display created_at end -->

      <dt>
        Updated at
      </dt>
      <!-- Display updated_at start -->
      <dd>
        <%= time_ago_in_words(@flight.updated_at) %> ago
      </dd>
      <!-- Display updated_at end -->
    </dl>
  </div>
</div>

