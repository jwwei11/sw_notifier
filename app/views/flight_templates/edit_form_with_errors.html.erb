<!-- Validation failure messages -->
<% if @flight.errors.any? %>
  <% @flight.errors.full_messages.each do |message| %>
    <div class="alert">
      <%= message %>
    </div>
  <% end %>
<% end %>

<h1>
  Edit flight #<%= @flight.id %>
</h1>

<hr>

<!-- Form flight start -->
<form action="/update_flight/<%= @flight.id %>" method="post">
<!-- Form flight end -->

  <!-- Label and input for flight_time start -->
  <div class="form-group">
    <label for="flight_time">
      Flight time
    </label>

    <!-- Input for flight_time start -->
    <input type="text" id="flight_time" name="flight_time" class="form-control" value="<%= @flight.flight_time %>">
    <!-- Input for flight_time end -->
  </div>
  <!-- Label and input for flight_time end -->

  <!-- Label and input for user_id start -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for departs_at start -->
  <div class="form-group">
    <label for="departs_at">
      Departs at
    </label>

    <!-- Input for departs_at start -->
    <input type="text" id="departs_at" name="departs_at" class="form-control" value="<%= @flight.departs_at %>">
    <!-- Input for departs_at end -->
  </div>
  <!-- Label and input for departs_at end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <label for="description">
      Description
    </label>

    <!-- Input for description start -->
    <input type="text" id="description" name="description" class="form-control" value="<%= @flight.description %>">
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <button class="btn btn-block btn-outline-secondary">
    Update flight
  </button>
</form>

<hr>

<a href="/flights">
  Go back
</a>
