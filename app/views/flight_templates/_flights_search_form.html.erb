<%= search_form_for @q, :class => collapse_search_form, :id => "flights_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :description_cont, "Description contains" %>
    <%= f.text_field :description_cont, :class => "form-control", :placeholder => "Description contains" %>
  </div>

  <div class="form-group">
    <%= f.label :departs_at, "Departs at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='departs_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :departs_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Departs at greater than or equal to", :data => {:target => '#departs_atgteqPicker'} %>
          <div class="input-group-append" data-target='#departs_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='departs_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :departs_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Departs at less than or equal to", :data => {:target => '#departs_atlteqPicker'} %>
          <div class="input-group-append" data-target='#departs_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#departs_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#departs_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#departs_atgteqPicker').on("dp.change", function (e) {
              $('#departs_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#departs_atlteqPicker').on("dp.change", function (e) {
              $('#departs_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :flight_time, "Flight time" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='flight_timegteqPicker' data-target-input="nearest">
          <%= f.text_field :flight_time_gteq, :class => "form-control datetimepicker-input", :placeholder => "Flight time greater than or equal to", :data => {:target => '#flight_timegteqPicker'} %>
          <div class="input-group-append" data-target='#flight_timegteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='flight_timelteqPicker' data-target-input="nearest">
          <%= f.text_field :flight_time_lteq, :class => "form-control datetimepicker-input", :placeholder => "Flight time less than or equal to", :data => {:target => '#flight_timelteqPicker'} %>
          <div class="input-group-append" data-target='#flight_timelteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#flight_timegteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#flight_timelteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#flight_timegteqPicker').on("dp.change", function (e) {
              $('#flight_timelteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#flight_timelteqPicker').on("dp.change", function (e) {
              $('#flight_timegteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :user_email_cont, "User email contains" %>
    <%= f.text_field :user_email_cont, :class => "form-control", :placeholder => "User email contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/flights" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

